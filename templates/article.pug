extends layout

block append vars
  - lang = page.metadata.lang ||Â 'en';
  - bodyclass = 'article';
  - schematype = 'http://schema.org/Article';

block prepend title
  |#{page.title + ' - '}

block append head
  include mixins/meta
  +meta(page)

block content
  include mixins/published
  header.heading.content-wrap
    if page.metadata.image
      img.heading__image(src=page.url + page.metadata.image)
    h1.heading__headline(itemprop='headline')= page.title
    p.heading__description(itemprop='description')= page.metadata.description
    p.heading__details
      +published(page.metadata.date)
  section.article__body.content-wrap(itemprop='articleBody')!= htmlMinifier.minify(typogr(page.html.replace('<img', '<img loading="lazy"')).smartypants(), { collapseBooleanAttributes: true, collapseWhitespace: true, decodeEntities: true, removeComments: true, removeEmptyAttributes: true, removeEmptyElements: true, removeRedundantAttributes: true, removeScriptTypeAttributes: true, removeStyleLinkTypeAttributes: true, sortAttributes: true, sortClassName: true })
