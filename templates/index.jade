extends layout

block append vars
  - bodyclass = 'home'
  - schematype = 'http://schema.org/Person'

block header
  header.article-header.content-wrap
    h1.article-headline.hi
      span.emoji ðŸ‘‹
      |#{' Hello there.'}
    p.article-description(itemtype='description')
      |#{'I am '}
      span(itemtype='name')= locals.owner
      |#{', '}
      = locals.description
      |#{'.'}
    include mixins/social
    mixin social()

block content
  include mixins/card
  section#labs.home__section.content-wrap
    - const labs = env.helpers.getLabs(contents);
    h2 Labs
    p Collection of quick experiments.
    div.labs-cards
      each lab in labs
        mixin card(lab)
  
  section#pixelart.home__section.content-wrap
    - const draws = env.helpers.getDraws(contents);
    h2 Pixel art
    p I made a lot of pixelart a decade ago. I'll try to get back.
    div.labs-cards
      each draw in draws
        mixin card(draw)
  
  section#articles.home__section.content-wrap
    - const articles = env.helpers.getArticles(contents).filter(article => !article.metadata.draft);
    h2 Articles
    each article in articles
      article(itemscope, itemtype='http://schema.org/Article')
        h3(itemprop='headline')
          a(href=article.url, itemprop='url')= article.title
        p(itemprop='description')= article.metadata.description
  
  section#about.home__section.content-wrap
    h2 About me
    p
      |#{'I am '}
      strong= locals.owner
      |#{', '}
      = locals.description
      |#{'.'}
    p
      |#{' I have worked for the last 10 years in the internet industry. I am currently working at '}
      a(href='https://www.mercadolibre.com.ar/', target='_blank') MercadoLibre.com
      |#{' (nasdaq:MELI): the largest e-commerce and fintech in Latin America.'}
    p I started designing user-centered interfaces, focused in UX research and experimentation. I gradually turned to front-end programming and involved myself more with the ins and outs of the Web.
    p
      |#{'Read more about me on '}
      a(href='https://www.linkedin.com/in/lean8086/', target='_blank') LinkedIn
      |#{', follow me on '}
      a(href='https://www.twitter.com/lean8086/', target='_blank') Twitter
      |#{' and fork me on '}
      a(href='https://www.github.com/lean8086/', target='_blank') GitHub
      |#{'.'}

block append body
  script.
    window.addEventListener('load', function () {
      document.head.insertAdjacentHTML('beforeend', '<style>.home .header {background-image: url("/assets/hero-hd.jpg")}');
    });
