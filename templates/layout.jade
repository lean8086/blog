doctype html
block vars
  - var bodyclass = null;
  - var schematype = null
html
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.owner
      link(rel='shortcut icon', href='https://en.gravatar.com/userimage/15818721/d41d282470a99d63c961e8e40d70f360.jpg?size=32')
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Lato:400,700|Lora:400,700')
      link(rel='stylesheet', href=contents.css['main.css'].url)
  body(class=bodyclass, itemscope, itemtype=schematype)
    block body
      header.header
        div.content-wrap
          block header
            div.logo
              h1= locals.owner
              p.description= locals.description
      main.content
        div.content-wrap
          block content
      footer(role='contentinfo')
        div.content-wrap
          block footer
            p.copy &copy; #{ new Date().getFullYear() } #{ locals.owner }
