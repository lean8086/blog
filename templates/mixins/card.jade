mixin card(url, title, date, isExternal)
  article.card(itemscope, itemtype='http://schema.org/Article')
    a.card__link(href=url, itemprop='url', target=isExternal ? '_blank' : null)
      img.card__image(src=`${url}image.png`, itemprop='image', title=`${title} (${moment.utc(date).format('MMM DD.YYYY')})`)
