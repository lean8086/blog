extends layout

block append vars
  - bodyclass = 'simple';

block prepend title
  | #{page.title + ' - '}

block content
  header.article-header.content-wrap
    h1.article-headline= page.title
    if page.metadata.description
      p.article-description= page.metadata.description
  section.article-body.content-wrap!= htmlMinifier.minify(typogr(page.html).smartypants(), { collapseBooleanAttributes: true, collapseWhitespace: true, decodeEntities: true, removeComments: true, removeEmptyAttributes: true, removeEmptyElements: true, removeRedundantAttributes: true, removeScriptTypeAttributes: true, removeStyleLinkTypeAttributes: true, sortAttributes: true, sortClassName: true })

block prepend footer
  div.nav
    a(href='/') Go back
